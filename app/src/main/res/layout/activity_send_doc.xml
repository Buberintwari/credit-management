<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"

    tools:context=".SendDocActivity">


    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:src="@drawable/ic_myback" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="vertical">



        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:text="eIdeni BGF "
            android:textColor="@color/myblue"
            android:textSize="40dp"
            android:layout_marginBottom="50dp"/>

        <TextView
          android:id="@+id/pdfSelected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Send documents "
            android:textAlignment="center"
            android:textColor="@color/myblue"
            android:textSize="20dp"
            android:textStyle="bold" />


        <!--edit text for pdf-->

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txt_pdfname"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/inputsborder"
            android:drawableStart="@drawable/ic_attachment"
            android:hint="select pdf"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:textColor="@color/myblue"
            android:textColorHint="@color/teal_200"
            android:textSize="14sp" />

        <!--button for login-->
        <Button
            android:id="@+id/btn_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/buttons_back"
            android:text="Upload pdf "
            android:textAllCaps="false"
            android:textColor="@color/myblue"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>